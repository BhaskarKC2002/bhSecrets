<%- include('partials/header') %>

<section class="py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="jumbotron text-center">
          <div class="mb-4">
            <i class="fas fa-key fa-6x"></i>
          </div>
          <h1 class="display-3">Secrets</h1>
          <p class="lead">Don't keep your secrets, share them anonymously!</p>
          
          <div class="row justify-content-center">
            <div class="col-md-8">
              <form action="/submit" method="POST" class="mt-4">
                <div class="mb-4">
                  <input type="text" class="form-control form-control-lg text-center" name="secret" placeholder="What's your secret?">
                </div>
                <button type="submit" class="btn btn-dark btn-lg">Submit</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

